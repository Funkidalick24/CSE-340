
<main>
  <% if (title) { %>
    <h1><%= title %></h1>
  <% } %>

  <%- messages() %>

  <% if (locals.accountData) { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    
    <p>
      <a href="/account/update/<%= locals.accountData.account_id %>" class="account-link">Update Account Information</a>
    </p>

    <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/" class="management-link">Manage Inventory</a>
      </p>
    <% } %>
  <% } %>
</main>


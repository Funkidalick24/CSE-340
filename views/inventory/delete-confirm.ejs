<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="delete-container">
  <p class="notice">Confirm Deletion - The delete is permanent.</p>
  <form id="deleteForm" action="/inv/delete" method="post" class="delete-form">
    <div class="form-group">
      <label for="inv_make">Make:</label>
      <input type="text" readonly name="inv_make" id="inv_make" value="<%= inv_make %>">
    </div>
    <div class="form-group">
      <label for="inv_model">Model:</label>
      <input type="text" readonly name="inv_model" id="inv_model" value="<%= inv_model %>">
    </div>
    <div class="form-group">
      <label for="inv_year">Year:</label>
      <input type="text" readonly name="inv_year" id="inv_year" value="<%= inv_year %>">
    </div>
    <div class="form-group">
      <label for="inv_price">Price:</label>
      <input type="text" readonly name="inv_price" id="inv_price" value="<%= inv_price %>">
    </div>
    <input type="hidden" name="inv_id" value="<%= inv_id %>">
    <div class="form-actions delete-actions">
      <button type="submit">Delete Vehicle</button>
      <a href="/inv/" class="btn btn-cancel">Cancel</a>
    </div>
  </form>
</div>